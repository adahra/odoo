<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- view tree: pasien -->
    <record id="view_pasien_tree" model="ir.ui.view">
        <field name="name">rumahsakit.pasien.tree</field>
        <field name="model">rumahsakit.pasien</field>
        <field name="arch" type="xml">
            <tree string="Pasien">
                <field name="nama"/>
                <field name="umur"/>
                <field name="gender"/>
                <field name="keterangan"/>
            </tree>
        </field>
    </record>

    <!-- view form: pasien -->
    <record id="view_pasien_form" model="ir.ui.view">
        <field name="name">rumahsakit.pasien.form</field>
        <field name="model">rumahsakit.pasien</field>
        <field name="arch" type="xml">
            <form string="Pasien">
                <sheet>
                    <field name="foto" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="nama"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="umur"/>
                        </group>
                        <group>
                            <field name="gender"/>
                        </group>
                    </group>
                    <group>
                        <field name="keterangan"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- action: pasien -->
    <record id="action_pasien" model="ir.actions.act_window">
        <field name="name">Pasien</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rumahsakit.pasien</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,kanban,graph,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat Baru
            </p>
        </field>
    </record>

    <menuitem id="menu_rumahsakit_root" name="Rumah Sakit"/>
    <menuitem id="menu_rumahsakit_pasien" name="Pasien" parent="menu_rumahsakit_root" action="action_pasien"/>
</odoo>